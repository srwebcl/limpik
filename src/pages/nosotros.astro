<style>
    /* --- Cinematic Hero Styles --- */
    .service-hero {
        position: relative;
        background-color: #000;
        height: 500px; /* Slightly shorter for internal pages */
        display: flex;
        align-items: center;
        color: white;
        overflow: hidden;
    }

    .service-hero .container {
        max-width: 100%;
        width: 100%;
        margin: 0;
        padding-left: 8%;
        display: flex;
        justify-content: flex-start;
    }

    .hero-slideshow {
        position: absolute;
        inset: 0;
        z-index: 0;
        pointer-events: none;
    }

    .slide {
        position: absolute;
        inset: 0;
        background-size: cover;
        background-position: center;
        opacity: 0;
        transform: scale(1);
        z-index: 0;
    }

    .slide.active {
        opacity: 1;
        z-index: 2;
        /* Single slide: slower continuous movement */
        animation: kenBurns 30s ease-out forwards;
    }

    @keyframes kenBurns {
        0% {
            transform: scale(1) translate(0, 0);
        }
        100% {
            transform: scale(1.15) translate(-1%, -1%);
        }
    }

    .overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            90deg,
            rgba(30, 58, 138, 0.95) 0%,
            rgba(30, 58, 138, 0.8) 40%,
            rgba(30, 58, 138, 0.4) 100%
        );
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
        max-width: 800px;
    }

    .hero-title {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        line-height: 1.1;
        margin-bottom: 2rem;
    }

    .title-line {
        display: block;
        opacity: 0;
        animation: slideUpFade 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .title-top {
        font-size: clamp(2rem, 3vw, 3rem);
        font-weight: 700;
        color: white;
        margin-bottom: 0.5rem;
        animation-delay: 0.1s;
    }

    .title-highlight {
        font-size: clamp(3rem, 5vw, 5rem);
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: -0.02em;
        position: relative;
        z-index: 1;
        animation-delay: 0.2s;
        background-image:
            linear-gradient(
                120deg,
                transparent 40%,
                rgba(255, 255, 255, 0.9) 50%,
                transparent 60%
            ),
            linear-gradient(135deg, #fb923c 0%, #f97316 50%, #ea580c 100%);
        background-size:
            200% auto,
            100% auto;
        background-position:
            200% center,
            center center;
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        color: #f97316;
        animation:
            slideUpFade 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards 0.2s,
            textShimmer 4s ease-in-out infinite alternate;
    }

    .title-bottom {
        font-size: clamp(1.8rem, 2.5vw, 2.5rem);
        font-weight: 600;
        color: rgba(255, 255, 255, 0.9);
        animation-delay: 0.3s;
    }

    .hero-description {
        font-size: 1.15rem;
        color: rgba(255, 255, 255, 0.9);
        max-width: 600px;
        margin-top: 1rem;
        line-height: 1.6;
        animation: slideUpFade 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards 0.3s;
        opacity: 0;
    }

    @keyframes slideUpFade {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes textShimmer {
        0% {
            background-position:
                200% center,
                center center;
        }
        100% {
            background-position:
                -200% center,
                center center;
        }
    }

    @media (max-width: 900px) {
        .service-hero .container {
            justify-content: center;
            text-align: center;
            padding: 0 5%;
        }
        .hero-title {
            align-items: center;
            text-align: center;
        }
        .title-top {
            font-size: 1.5rem;
        }
        .title-highlight {
            font-size: 2.5rem;
            line-height: 1.1;
            margin-bottom: 0.5rem;
        }
        .title-bottom {
            font-size: 1.25rem;
        }
        .hero-description {
            margin: 1.5rem auto;
            font-size: 1rem;
            text-align: center;
        }
    }

    /* --- General Section Styles --- */
    .section {
        padding: 6rem 0;
    }
    .bg-light {
        background-color: #f8fafc;
        border-top: 1px solid #e2e8f0;
        border-bottom: 1px solid #e2e8f0;
    }

    /* --- Intro Section --- */
    .row {
        display: flex;
        gap: 4rem;
        align-items: center;
    }
    .col {
        flex: 1;
    }

    .section-label {
        font-family: var(--font-heading);
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: var(--color-primary);
        font-weight: 700;
        margin-bottom: 0.5rem;
        display: block;
    }

    .about-intro h2 {
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
        line-height: 1.2;
        color: var(--color-text-main);
    }

    .lead {
        font-size: 1.25rem;
        color: var(--color-text-main);
        font-weight: 500;
        margin-bottom: 1.5rem;
    }

    .pillars-list {
        margin-top: 2rem;
        list-style: none;
        padding: 0;
    }

    .pillars-list li {
        margin-bottom: 1rem;
        font-size: 1.05rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .check-icon {
        color: var(--color-secondary);
        font-weight: 900;
        font-size: 1.2rem;
    }

    /* Image Styling */
    .image-wrapper {
        position: relative;
        border-radius: 16px;
        overflow: visible; /* allow decoration outside */
    }

    .about-image {
        width: 100%;
        height: auto;
        border-radius: 16px;
        box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.15);
        position: relative;
        z-index: 2;
        transform: rotate(1deg); /* Subtle organic feel */
        transition: transform 0.3s ease;
    }

    .about-image:hover {
        transform: rotate(0deg) scale(1.02);
    }

    .image-decoration {
        position: absolute;
        top: -15px;
        right: -15px;
        width: 100px;
        height: 100px;
        border-top: 4px solid var(--color-secondary);
        border-right: 4px solid var(--color-secondary);
        border-radius: 0 16px 0 0;
        z-index: 1;
    }

    /* --- Mission & Vision --- */
    .mv-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
    }

    .mv-card {
        background: white;
        padding: 3.5rem 3rem;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05); /* Soft premium shadow */
        position: relative;
        overflow: hidden;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
        border-top: 4px solid transparent;
    }

    .mv-card.mission {
        border-top-color: var(--color-primary);
    }
    .mv-card.vision {
        border-top-color: var(--color-secondary);
    }

    .mv-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    .card-icon {
        font-size: 3rem;
        margin-bottom: 1.5rem;
    }

    .mv-card h3 {
        font-size: 1.75rem;
        margin-bottom: 1rem;
        color: var(--color-text-main);
    }

    .mv-card p {
        color: var(--color-text-light);
        line-height: 1.7;
    }

    /* --- Values --- */
    .section-center-header {
        text-align: center;
        max-width: 700px;
        margin: 0 auto 4rem;
    }

    .section-center-header h2 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .values-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
    }

    .value-card {
        background: white;
        padding: 2rem 1.5rem;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(0, 0, 0, 0.03);
        transition: all 0.3s ease;
    }

    .value-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px -5px rgba(0, 0, 0, 0.1);
        border-color: rgba(37, 99, 235, 0.1);
    }

    .value-icon {
        font-size: 2.5rem;
        display: block;
        margin-bottom: 1rem;
        transition: transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .value-card:hover .value-icon {
        transform: scale(1.2);
    }

    .value-card h4 {
        font-size: 1.1rem;
        margin-bottom: 0.5rem;
        color: var(--color-text-main);
    }

    .value-card p {
        font-size: 0.9rem;
        color: var(--color-text-light);
        line-height: 1.4;
    }

    /* --- Responsive --- */
    @media (max-width: 900px) {
        .row {
            flex-direction: column;
        }
        .about-image {
            margin-top: 1rem;
        }
        .mv-grid {
            grid-template-columns: 1fr;
        }
        .values-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    @media (max-width: 600px) {
        .values-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
