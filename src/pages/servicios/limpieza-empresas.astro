<script>
    function initSlideshow() {
        const slides = document.querySelectorAll(".hero-slideshow .slide");
        let currentSlide = 0;
        const intervalTime = 6000;
        const transitionTime = 2000;

        if (slides.length > 0) {
            // Reset state first to avoid stacking issues on re-init
            slides.forEach((slide, index) => {
                slide.classList.remove("active", "last-active");
                if (index === 0) slide.classList.add("active");
            });

            const interval = setInterval(() => {
                if (!document.body.contains(slides[0])) {
                    clearInterval(interval);
                    return;
                }

                slides[currentSlide].classList.remove("active");
                slides[currentSlide].classList.add("last-active");

                const prevSlide = currentSlide;
                currentSlide = (currentSlide + 1) % slides.length;

                slides[currentSlide].classList.add("active");

                setTimeout(() => {
                    slides[prevSlide].classList.remove("last-active");
                }, transitionTime);
            }, intervalTime);

            // Cleanup on navigation (if re-run)
            document.addEventListener(
                "astro:before-preparation",
                () => {
                    clearInterval(interval);
                },
                { once: true },
            );
        }
    }

    // Run on initial load and View Transitions
    initSlideshow();
    document.addEventListener("astro:page-load", initSlideshow);
</script>
