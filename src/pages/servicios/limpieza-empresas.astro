<style>
    /* CTA Banner Split Styles */
    .cta-banner-split {
        display: grid;
        grid-template-columns: 1fr 1fr;
        background: linear-gradient(
            135deg,
            #1e3a8a 0%,
            #1e40af 100%
        ); /* Corporate Blue */
        min-height: 500px;
        overflow: hidden;
    }

    .cta-image-col {
        position: relative;
        overflow: hidden;
    }

    .cta-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.8s ease;
    }

    .cta-banner-split:hover .cta-image {
        transform: scale(1.05);
    }

    .cta-content-col {
        display: flex;
        align-items: center;
        padding: 5rem;
        color: white;
        position: relative;
    }

    /* Decoration Circle */
    .cta-content-col::before {
        content: "";
        position: absolute;
        top: -50px;
        right: -50px;
        width: 200px;
        height: 200px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.05);
        z-index: 0;
    }

    .cta-content-wrapper {
        position: relative;
        z-index: 1;
        max-width: 500px;
    }

    .cta-label {
        font-size: 0.85rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: #fb923c; /* Orange */
        display: block;
        margin-bottom: 1rem;
    }

    .cta-banner-split h2 {
        font-size: clamp(2rem, 3vw, 2.5rem);
        color: white;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        font-weight: 800;
    }

    .cta-banner-split p {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.85);
        margin-bottom: 2.5rem;
        line-height: 1.6;
    }

    .cta-actions {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        align-items: flex-start;
    }

    .trust-badge {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.8);
        font-weight: 500;
    }

    .btn-strategic-white {
        background: white;
        color: #1e3a8a;
        padding: 1rem 2.5rem;
        border-radius: 0.5rem;
        font-weight: 700;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .btn-strategic-white:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        background: #f8fafc;
    }

    @media (max-width: 900px) {
        .cta-banner-split {
            grid-template-columns: 1fr;
        }

        .cta-image-col {
            height: 300px;
        }

        .cta-content-col {
            padding: 3rem 1.5rem;
        }
    }
    .service-hero {
        position: relative;
        background-color: #000;
        height: 650px;
        display: flex;
        align-items: center;
        color: white;
        overflow: hidden;
    }

    /* Force container to the left */
    .service-hero .container {
        max-width: 100%;
        width: 100%;
        margin: 0;
        padding-left: 8%; /* Adjust for visual balance */
        display: flex;
        justify-content: flex-start;
    }

    .hero-slideshow {
        position: absolute;
        inset: 0;
        z-index: 0;
        pointer-events: none;
    }

    .slide {
        position: absolute;
        inset: 0;
        background-size: cover;
        background-position: center;
        opacity: 0;
        transform: scale(1);
        transition:
            transform 20s ease-out,
            opacity 2s ease-in-out;
        z-index: 0;
    }

    /* Incoming/Active Slide - Fades IN & Moves */
    .slide.active {
        opacity: 1;
        z-index: 2;
        transform: scale(1.15);
    }

    /* Outgoing Slide - Stays Visible */
    .slide.last-active {
        opacity: 1;
        z-index: 1; /* Behind active */
        /* No transform override needed; implies reverting to scale(1) via transition */
    }

    .overlay {
        position: absolute;
        inset: 0;
        /* Blue gradient on left, transparent on right */
        background: linear-gradient(
            90deg,
            rgba(30, 58, 138, 1) 0%,
            /* Full Blue #1e3a8a */ rgba(30, 58, 138, 0.9) 40%,
            /* Slight fade start */ rgba(30, 58, 138, 0.4) 70%,
            rgba(30, 58, 138, 0) 100% /* Transparent */
        );
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
        max-width: 800px;
        margin-left: 0; /* Ensure strict left alignment */
        padding-left: 0; /* Removing potential extra padding if any, though container handles it */
    }

    .hero-title {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        line-height: 1.1;
        margin-bottom: 2rem;
    }

    .title-line {
        display: block;
        opacity: 0;
        animation: slideUpFade 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .title-top {
        font-size: clamp(2rem, 3vw, 3rem);
        font-weight: 700;
        color: white;
        margin-bottom: 0.5rem;
        animation-delay: 0.1s;
    }

    .title-highlight {
        font-size: clamp(3rem, 5vw, 5rem);
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: -0.02em;
        position: relative;
        z-index: 1;
        animation-delay: 0.2s;

        /* Shimmer Effect */
        background-image:
            linear-gradient(
                120deg,
                transparent 40%,
                rgba(255, 255, 255, 0.9) 50%,
                transparent 60%
            ),
            linear-gradient(135deg, #fb923c 0%, #f97316 50%, #ea580c 100%); /* Orange Gradient */
        background-size:
            200% auto,
            100% auto;
        background-position:
            200% center,
            center center;

        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        color: #f97316;

        animation:
            slideUpFade 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards 0.2s,
            textShimmer 4s ease-in-out infinite alternate;
    }

    .title-bottom {
        font-size: clamp(1.8rem, 2.5vw, 2.5rem);
        font-weight: 600;
        color: rgba(255, 255, 255, 0.9);
        animation-delay: 0.3s;
    }

    @keyframes slideUpFade {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes textShimmer {
        0% {
            background-position:
                200% center,
                center center;
        }
        100% {
            background-position:
                -200% center,
                center center;
        }
    }

    .hero-badges {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
        animation: slideUpFade 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards 0.4s;
        opacity: 0;
    }

    .badge {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(8px);
        border: 1px solid rgba(255, 255, 255, 0.4);
        color: white;
        padding: 0.6rem 1.2rem;
        border-radius: 2rem;
        font-weight: 600;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        transition: all 0.3s ease;
    }

    .badge:hover {
        background: rgba(255, 255, 255, 0.25);
        transform: translateY(-2px);
    }

    .hero-description {
        font-size: 1.15rem;
        color: rgba(255, 255, 255, 0.9);
        max-width: 600px;
        margin-top: 1rem;
        line-height: 1.6;
        animation: slideUpFade 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards 0.3s;
        opacity: 0;
    }

    /* Hero Actions & Buttons */
    .hero-actions {
        display: flex;
        gap: 1.5rem;
        margin-top: 2rem;
        flex-wrap: wrap;
        animation: slideUpFade 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards 0.4s;
        opacity: 0;
    }

    .btn-strategic {
        background: linear-gradient(135deg, #fb923c 0%, #ea580c 100%);
        color: white;
        padding: 1.2rem 2.5rem;
        border-radius: 0.5rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        text-decoration: none;
        box-shadow: 0 4px 15px rgba(234, 88, 12, 0.4);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 0.8rem;
        font-size: 1.1rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
