---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

export async function getStaticPaths() {
    const posts = await getCollection("blog");
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout
    title={`${post.data.title} | Noticias Limpik`}
    description={post.data.description}
>
    <Header />

    <main class="main-content-spaced">
        <article class="post-article">
            <header class="post-header container">
                <div class="meta">
                    <time datetime={post.data.pubDate.toISOString()}>
                        {
                            post.data.pubDate.toLocaleDateString("es-CL", {
                                year: "numeric",
                                month: "long",
                                day: "numeric",
                            })
                        }
                    </time>
                    {
                        post.data.tags && (
                            <span class="tags">
                                {" "}
                                Â· {post.data.tags.join(", ")}
                            </span>
                        )
                    }
                </div>
                <h1>{post.data.title}</h1>
            </header>

            {
                post.data.image && (
                    <div class="container featured-image-wrapper">
                        <img
                            src={post.data.image}
                            alt={post.data.title}
                            class="featured-image"
                        />
                    </div>
                )
            }

            <div class="container post-content">
                <Content />
            </div>

            <div class="container post-footer">
                <a href="/noticias" class="btn-back">&larr; Volver a Noticias</a
                >
            </div>
        </article>
    </main>

    <Footer />
</Layout>

<style>
    .post-header {
        padding: 4rem 1rem 2rem;
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
    }

    .meta {
        color: var(--color-text-light);
        margin-bottom: 1rem;
        font-size: 0.9rem;
    }

    .post-header h1 {
        font-size: 2.5rem;
        color: var(--color-primary);
        line-height: 1.2;
    }

    .featured-image-wrapper {
        max-width: 800px;
        margin: 0 auto 2rem;
        padding: 0 1rem;
    }

    .featured-image {
        width: 100%;
        height: auto;
        max-height: 500px;
        object-fit: cover;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .post-content {
        max-width: 720px;
        margin: 0 auto;
        padding: 2rem 1rem;
        line-height: 1.8;
        font-size: 1.1rem;
    }

    /* Typography styles for markdown content - global styles handles some, but specific overrides here */
    .post-content :global(h2) {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.8rem;
    }

    .post-content :global(p) {
        margin-bottom: 1.5rem;
    }

    .post-content :global(ul),
    .post-content :global(ol) {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
    }

    .post-content :global(li) {
        margin-bottom: 0.5rem;
    }

    .post-footer {
        max-width: 720px;
        margin: 3rem auto;
        padding: 0 1rem;
        border-top: 1px solid var(--color-border);
        padding-top: 2rem;
    }

    .btn-back {
        color: var(--color-text-light);
        font-weight: 500;
    }
    .btn-back:hover {
        color: var(--color-primary);
    }

    @media (max-width: 600px) {
        .post-header h1 {
            font-size: 2rem;
        }
    }
</style>
