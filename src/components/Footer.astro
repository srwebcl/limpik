<style>
    .site-footer {
        background: linear-gradient(
            180deg,
            var(--color-primary) 0%,
            var(--color-primary-dark) 100%
        ) !important; /* Force Blue */
        color: #f1f5f9; /* Slate 100 - High contrast text */
        padding-top: 0;
        position: relative;
        overflow: hidden;
        font-family: var(--font-body);
    }

    .footer-top-line {
        height: 4px;
        width: 100%;
        background: linear-gradient(
            90deg,
            var(--color-primary) 0%,
            var(--color-secondary) 50%,
            var(--color-primary) 100%
        );
        box-shadow: 0 0 15px rgba(37, 99, 235, 0.5); /* Glow */
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1.5fr; /* Optimized ratios */
        gap: 4rem;
        padding: 5rem 1rem;
        position: relative;
        z-index: 1;
    }

    /* Col 1: Brand */
    .footer-brand-col {
        display: flex;
        flex-direction: column;
        align-items: flex-start; /* Default Left for Desktop */
        text-align: left;
    }

    .brand-header {
        margin-bottom: 1.5rem;
        display: flex;
        flex-direction: column;
        align-items: flex-start; /* Default Left */
    }

    .logo-footer {
        height: 45px;
        width: auto;
        display: block;
        margin-bottom: 0.5rem;
        filter: brightness(0) invert(1);
    }

    .tagline {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.25em;
        color: var(--color-secondary);
        font-weight: 700;
        opacity: 0.9;
    }

    .description {
        line-height: 1.7;
        font-size: 0.95rem;
        color: white;
        margin-bottom: 2rem;
        max-width: 300px;
        text-align: left; /* Default Left */
    }

    .social-links {
        display: flex;
        gap: 1rem;
        justify-content: flex-start; /* Default Left */
    }

    .social-icon {
        width: 40px;
        height: 40px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        color: white;
        transition: all 0.3s ease;
    }

    .social-icon:hover {
        background: var(--color-primary);
        border-color: var(--color-primary);
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(37, 99, 235, 0.3);
    }

    /* Link Columns */
    h4 {
        color: white;
        font-size: 1.1rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        position: relative;
        display: inline-block;
    }

    .footer-links-col ul {
        list-style: none;
        padding: 0;
    }

    .footer-links-col li {
        margin-bottom: 1rem;
    }

    .footer-links-col a {
        color: #cbd5e1;
        text-decoration: none;
        font-size: 0.95rem;
        transition: all 0.3s ease;
        display: inline-block;
        position: relative;
    }

    .footer-links-col a:hover {
        color: white;
        transform: translateX(5px);
    }

    .footer-links-col a::before {
        content: "‚Ä∫";
        position: absolute;
        left: -15px;
        opacity: 0;
        color: var(--color-secondary);
        transition: all 0.3s ease;
    }

    .footer-links-col a:hover::before {
        opacity: 1;
        left: -12px;
    }

    .highlight-link {
        color: var(--color-secondary) !important;
        font-weight: 500;
    }

    /* Contact Column */
    .contact-card {
        display: flex;
        align-items: center;
        gap: 1rem;
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 1rem;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.3s ease;
        margin-bottom: 1.5rem;
    }

    .contact-card:hover {
        background: rgba(255, 255, 255, 0.08);
        border-color: var(--color-secondary);
        transform: translateY(-2px);
    }

    .icon-box {
        color: #25d366; /* WhatsApp Green */
        background: rgba(37, 211, 102, 0.1);
        width: 45px;
        height: 45px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
    }

    .contact-card:hover .icon-box {
        background: #25d366;
        color: white;
    }

    .contact-info {
        display: flex;
        flex-direction: column;
    }

    .contact-info .label {
        font-size: 0.75rem;
        text-transform: uppercase;
        color: #94a3b8;
        letter-spacing: 0.05em;
    }

    .contact-info .value {
        color: white;
        font-weight: 700;
        font-size: 1.1rem;
    }

    .contact-details {
        display: flex;
        flex-direction: column;
        gap: 0.8rem;
    }

    .detail-link,
    .location {
        color: #cbd5e1;
        font-size: 0.9rem;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.8rem;
        transition: color 0.3s;
    }

    .detail-link:hover {
        color: var(--color-secondary);
    }

    .icon {
        font-size: 1.1rem;
    }

    /* Footer Bottom */
    .footer-bottom {
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        padding: 2rem 0;
        position: relative;
        z-index: 1;
        background: rgba(0, 0, 0, 0.2);
    }

    .bottom-flex {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.85rem;
        color: #64748b;
    }

    .thunder {
        animation: pulse 2s infinite;
        display: inline-block;
    }

    @keyframes pulse {
        0% {
            transform: scale(1);
            opacity: 0.7;
        }
        50% {
            transform: scale(1.3);
            opacity: 1;
            text-shadow: 0 0 10px #fb923c;
        }
        100% {
            transform: scale(1);
            opacity: 0.7;
        }
    }

    .srweb-link {
        color: #e2e8f0;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s;
    }

    .srweb-link:hover {
        color: white;
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .footer-grid {
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
        }
    }

    @media (max-width: 640px) {
        .footer-grid {
            display: flex;
            flex-direction: column;
            gap: 3rem;
            text-align: center;
        }

        /* Mobile Centering Overrides */
        .footer-brand-col {
            align-items: center;
        }

        .brand-header {
            align-items: center;
        }

        .description {
            text-align: center;
            max-width: 100%;
        }

        .social-links {
            justify-content: center;
        }

        .contact-details {
            align-items: center;
        }

        .footer-links-col a::before {
            display: none; /* Simplify on mobile */
        }

        .contact-card {
            justify-content: center;
            text-align: left;
        }

        .bottom-flex {
            flex-direction: column;
            gap: 1rem;
        }

        .credits {
            order: 1;
        }
        .copyright {
            order: 2;
        }
    }
</style>
